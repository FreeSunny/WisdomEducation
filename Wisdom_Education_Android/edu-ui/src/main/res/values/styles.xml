<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.EduApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.EduApp.Landscape" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomImageView">
        <item name="android:layout_width">@dimen/common_dp_24</item>
        <item name="android:layout_height">@dimen/common_dp_24</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/common_dp_32</item>
        <item name="android:layout_marginEnd">@dimen/common_dp_32</item>
        <item name="android:layout_marginTop">@dimen/common_dp_9</item>
    </style>

    <style name="BottomTextView">
        <item name="android:textColor">@color/color_b4bfd0</item>
        <item name="android:textSize">@dimen/ts_11_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/common_dp_6</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CommonDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/ts_18_dp</item>
    </style>
</resources>
